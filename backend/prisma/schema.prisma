// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ROLE_USER
  ROLE_PARTNER
  ROLE_ADMIN
}

enum Capability {
  PERSON_NOT_VALID_FOR_PUBLIC
  PERSON_HAVE_CONSTRAINTS
  PERSON_IS_CLEAN
}

enum Devices {
  DEVICE_BROWSER
  DEVICE_ANDROID
  DEVICE_IOS
}

model Token {
  id         Int     @id @default(autoincrement())
  token      String  @unique
  typeDevice Devices @default(DEVICE_BROWSER)
  users      User[]
}

model User {
  id       Int       @id @default(autoincrement())
  login    String    @unique
  pwd      String?
  fullName String?
  email    String?
  phone    String?
  role     Role      @default(ROLE_USER)
  auths    Token[]
  ills     Ill[]
  vaccines Vaccine[]
  survey   Survey[]
}

model Ill {
  id           Int        @id @default(autoincrement())
  name         String     @unique
  type         String?
  about        String?
  info         String?
  capabilities Capability @default(PERSON_IS_CLEAN)
  users        User[]
}

model Survey {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  type  String?
  about String?
  info  String?
  users User[]
}

model Vaccine {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  type  String?
  about String?
  info  String?
  users User[]
}

model Partner {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  timeWork DateTime
  url      String   @unique
  about    String
}
