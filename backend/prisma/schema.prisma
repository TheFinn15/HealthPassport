// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ROLE_USER
  ROLE_PARTNER
  ROLE_ADMIN
}

enum UserCapability {
  PERSON_NOT_VALID_FOR_PUBLIC
  PERSON_HAVE_CONSTRAINTS
  PERSON_IS_CLEAN
}

enum Devices {
  DEVICE_BROWSER
  DEVICE_ANDROID
  DEVICE_IOS
}

enum TypeServices {
  TYPE_SURVEY
  TYPE_VACCINE
  TYPE_ILL
}

model Token {
  id             Int      @id @default(autoincrement())
  token          String?
  ip             String?  @unique
  location       String?
  lastOnlineTime DateTime @default(now())
  typeDevice     Devices  @default(DEVICE_BROWSER)
  users          User[]
}

model User {
  id           Int                @id @default(autoincrement())
  login        String             @unique
  pwd          String?            @ignore
  fullName     String?
  email        String?
  phone        String?
  capabilities UserCapability     @default(PERSON_IS_CLEAN)
  role         Role               @default(ROLE_USER)
  auths        Token[]
  services     SupplierServices[]
}

model SupplierServices {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  type        TypeServices @default(TYPE_SURVEY)
  passingTime DateTime     @default(now())
  about       String?
  info        String?
  users       User[]
  partner     Partner?     @relation(fields: [partnerId], references: [id])
  partnerId   Int?
}

model Partner {
  id       Int                @id @default(autoincrement())
  name     String             @unique
  timeWork DateTime
  url      String             @unique
  about    String
  services SupplierServices[]
}
